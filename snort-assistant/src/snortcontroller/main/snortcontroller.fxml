                                    </HBox>
                                    <HBox alignment="CENTER_LEFT" layoutX="20.0" layoutY="66.0" spacing="10.0">
                                       <children>
                                          <CheckBox fx:id="alertModeCheckBox" mnemonicParsing="false" prefWidth="300.0" text="Alert mode(-A)" />
