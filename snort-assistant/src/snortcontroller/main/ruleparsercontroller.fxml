<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TableView?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.control.ToolBar?>
<?import javafx.scene.layout.BorderPane?>

<BorderPane xmlns="http://javafx.com/javafx/11.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="snortcontroller.main.RuleParserController">
   <top>
      <ToolBar BorderPane.alignment="CENTER">
        <items>
            <Label text=".rules" />
            <TextField promptText="absolute path here" />
          <Button mnemonicParsing="false" text="Find" />
            <Button layoutX="10.0" layoutY="10.0" mnemonicParsing="false" text="Open" />
        </items>
         <padding>
            <Insets bottom="10.0" left="10.0" right="10.0" top="10.0" />
         </padding>
      </ToolBar>
   </top>
   <center>
      <TableView prefHeight="300.0" prefWidth="600.0" BorderPane.alignment="CENTER" />
   </center>
   <bottom>
      <ToolBar prefHeight="40.0" prefWidth="200.0" BorderPane.alignment="CENTER">
        <items>
          <Button mnemonicParsing="false" text="Save" />
        </items>
      </ToolBar>
   </bottom>
</BorderPane>
